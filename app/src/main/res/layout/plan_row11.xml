<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WorkoutPlan">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@drawable/edittextstyle"
        android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"

                    android:background="@drawable/list_down_style"
                    android:weightSum="2">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.5"
                        android:padding="10dp"
                        android:visibility="gone"
                        android:background="@drawable/list_button_style"
                        android:text="Bodypart:"
                        android:textSize="18sp"></TextView>

                    <TextView
                        android:id="@+id/bodypart"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:visibility="gone"
                        android:padding="10dp"
                        android:text="Bodypart"
                        android:textSize="18sp"></TextView>

                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/list_down_style"
                    android:weightSum="2">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.5"
                        android:padding="10dp"
                        android:visibility="gone"
                        android:background="@drawable/list_button_style"
                        android:text="Remark:"
                        android:textSize="18sp"></TextView>

                    <TextView
                        android:id="@+id/remark"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="10dp"
                        android:visibility="gone"
                        android:text="Remark"
                        android:textSize="18sp"></TextView>

                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/list_down_style"
                    android:weightSum="2">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.5"
                        android:padding="10dp"
                        android:background="@drawable/list_button_style"
                        android:text="Exercise:"
                        android:textColor="@color/Red"
                        android:textSize="18sp"></TextView>

                    <TextView
                        android:id="@+id/exercise"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/back"
                        android:padding="10dp"
                        android:text="Exercise"
                        android:textSize="18sp"></TextView>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="4">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="10dp"
                        android:text="Sets:"
                        android:textColor="@color/Red"
                        android:background="@drawable/list_button_style"
                        android:textSize="18sp"></TextView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="10dp"
                        android:text="Sets:"
                        android:background="@drawable/list_button_style"
                        android:id="@+id/sets"
                        android:textColor="@color/back"
                        android:textSize="18sp"></TextView>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="10dp"
                        android:textColor="@color/Red"
                        android:background="@drawable/list_button_style"
                        android:text="Repeat"
                        android:textSize="18sp"></TextView>


                    <TextView
                        android:id="@+id/repitations"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="10dp"
                        android:textColor="@color/back"
                        android:text="Repitation"
                        android:textSize="18sp"></TextView>

                </LinearLayout>
    </LinearLayout>
</LinearLayout>